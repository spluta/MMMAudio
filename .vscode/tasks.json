{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python (High Priority)",
            "type": "shell",
            "command": "nice -n -20",
            "args": [
                "${config:python.pythonPath}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}